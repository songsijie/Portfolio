{
  "compilerOptions": {
    "module": "CommonJS",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": [
      "astro/client"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*",
    "astro.config.ts"
  ]
}